---
interface Props {
  date: Date;
  time?: boolean;
}

const { date, time = false } = Astro.props;

const ISODate = time ? date.toISOString() : date.toISOString().slice(0, 10);
const formattedDate = time ? date.toLocaleDateString("ru", {
  year: "numeric",
  month: "short",
  day: "numeric",
  hour: "2-digit",
  minute: "2-digit",
  second: "2-digit"
}) : date.toLocaleDateString("ru", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<time datetime={ISODate}>
  {formattedDate}
</time>
